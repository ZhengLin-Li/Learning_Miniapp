<!--pages/maps/maps.wxml-->
<!-- map.wxml -->

<!-- 这是地图 -->
<map id="map"  scale="18" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width: 100%; height=300rpx;"></map>

<!-- 这是输入框 -->

<view>
  <view class="weui-search-bar">
        <view class="weui-search-bar__form">
        <!-- 搜索框 -->
            <view class="weui-search-bar__box">
                <icon class="weui-icon-search_in-box" type="search" size="18"></icon>
                <input type="number" class="weui-search-bar__input" placeholder="请输入6位取件码" maxlength="6"/>
            </view>
        </view>
        <!-- 搜索按钮,调用搜索查询方法 -->
        <view class="weui-search-bar__cancel-btn" bindtap='方法名a'>确定</view>
   </view>
  </view>


